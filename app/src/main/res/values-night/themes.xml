<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.CoinWise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grayDark</item>
        <item name="colorSecondaryVariant">@color/grayDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grayBackground</item>
        <!-- Customize your theme here. -->

        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="titulo_regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="titulo_medium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="titulo_semibold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="titulo_bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="titulo_ligth" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>